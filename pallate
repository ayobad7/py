  <script>
    // Night toggle (cycles between system dark and deeper night)
    const nightBtn = document.getElementById('night');
    nightBtn.addEventListener('click', () => {
      const html = document.documentElement;
      html.dataset.theme = html.dataset.theme === 'night' ? '' : 'night';
      nightBtn.textContent = html.dataset.theme === 'night' ? 'System Dark' : 'Night';
    });

    // Pill selection logic
    const grid = document.getElementById('pillGrid');
    const selList = document.getElementById('selList');
    const count = document.getElementById('count');
    const clearBtn = document.getElementById('clear');

    function updateSummary() {
      const active = [...grid.querySelectorAll('.pill[data-checked="true"]')].map(p => p.dataset.value);
      selList.textContent = active.length ? active.join(', ') : 'None';
      count.textContent = `${active.length} selected`;
    }

    // Click and keyboard activation
    grid.querySelectorAll('.pill').forEach(pill => {
      pill.setAttribute('aria-pressed', 'false');
      pill.setAttribute('tabindex', '0');

      function toggle() {
        const next = pill.getAttribute('data-checked') !== 'true';
        pill.setAttribute('data-checked', next ? 'true' : 'false');
        pill.setAttribute('aria-pressed', next ? 'true' : 'false');
        updateSummary();
      }

      pill.addEventListener('click', toggle);
      pill.addEventListener('keydown', (e) => {
        if (e.key === 'Enter' || e.key === ' ') { e.preventDefault(); toggle(); }
      });
    });

    clearBtn.addEventListener('click', () => {
      grid.querySelectorAll('.pill').forEach(p => {
        p.setAttribute('data-checked','false');
        p.setAttribute('aria-pressed','false');
      });
      updateSummary();
    });

    updateSummary();
  </script>
